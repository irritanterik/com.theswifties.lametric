{
	"id": "com.theswifties.lametric",
	"version": "0.0.1",
	"compatibility": "0.10.x",
	"category": "internet",
	"name": {
		"en": "LaMetric Time",
    "nl": "LaMetric Time"
	},
	"description": {
		"en": "Display Homey notifications on your LaMetric Time.",
    "nl": "Toon notificaties op LaMetric Time."
	},
	"author": {
		"name": "Mark Swift",
		"email": "markaswift@gmail.com"
	},
	"images":{
    "large":"./assets/images/large.png",
    "small":"./assets/images/small.png"
   },
   "drivers": [
     {
       "id": "lametric",
       "name": {
         "en": "LaMetric Time"
       },
       "class": "other",
       "capabilities": ["volume_set"],
       "images": {
         "large": "drivers/thermostat/assets/images/large.png",
         "small": "drivers/thermostat/assets/images/small.png"
       },
       "settings":[
         {
           "type":"group",
           "label":{
             "en":"General settings",
             "nl":"Instellingen"
           },
           "children":[
             { "id":"ipv4",
               "type":"text",
               "value":"192.168.1.100",
               "label":{
                 "en":"Local IP address",
                 "nl":"Lokaal IP adres"
               }
             }
           ]
         }
       ],
       "pair": [
         {
           "id": "start"
         },{
           "id": "list_devices",
           "template": "list_devices",
           "navigation": {
             "next": "add_devices"
           }
         },{
           "id": "add_devices",
           "template": "add_devices"
         }
       ]
     }],
   	"flow": {
		"actions": [
      { "id": "notificationText",
        "title": {
          "en": "Notification",
          "nl": "Notificatie"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter":"driver_id=lametric"
          },{
            "name": "text",
            "type": "text",
            "placeholder": {
              "en": "Text",
              "nl": "Bericht"
            }
          }
        ]
      },
      { "id": "notificationTextIcon",
        "title": {
          "en": "Notification (icon)",
          "nl": "Notificatie (icoon)"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter":"driver_id=lametric"
          },{
            "name": "text",
            "type": "text",
            "placeholder": {
              "en": "Text",
              "nl": "Bericht"
            }
          },{
            "name": "icon",
            "type": "autocomplete",
            "placeholder": {
              "en": "Homey"
            }
          }
        ]
      },
      { "id": "notificationTextIconSound",
        "title": {
          "en": "Notification (icon and sound)",
          "nl": "Notificatie (icoon en geluid)"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter":"driver_id=lametric"
          },{
            "name": "text",
            "type": "text",
            "placeholder": {
              "en": "Text",
              "nl": "Bericht"
            }
          },{
            "name": "icon",
            "type": "autocomplete",
            "placeholder": {
              "en": "Homey"
            }
          },{
            "name": "sound",
            "type": "autocomplete",
            "placeholder": {
              "en": "Sound",
              "nl": "Geluid"
            }
          }
        ]
      },
      { "id": "notificationTextSound",
        "title": {
          "en": "Notification (sound)",
          "nl": "Notificatie (geluid)"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter":"driver_id=lametric"
          },{
            "name": "text",
            "type": "text",
            "placeholder": {
              "en": "Text",
              "nl": "Bericht"
            }
          },{
            "name": "sound",
            "type": "autocomplete",
            "placeholder": {
              "en": "Sound",
              "nl": "Geluid"
            }
          }
        ]
      },
      { "id": "setVolume",
        "title": {
          "en": "Set volume",
          "nl": "Instellen volume"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter":"driver_id=lametric"
          },{
            "name": "volume",
            "type": "range",
            "min": 0,
            "max": 100,
            "step": 1,
            "label": "%",
            "labelDecimals": 0
          }
        ]
      }
    ]
	}
}
