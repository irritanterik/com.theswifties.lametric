{
	"id": "com.theswifties.lametric",
	"version": "0.0.1",
	"compatibility": "0.10.x",
	"category": "internet",
	"name": {
		"en": "LaMetric Time",
    "nl": "LaMetric Time"
	},
	"description": {
		"en": "Display Homey notifications on your LaMetric Time.",
    "nl": "Toon notificaties op LaMetric Time."
	},
	"author": {
		"name": "Mark Swift",
		"email": "markaswift@gmail.com"
	},
	"images":{
    "large":"./assets/images/large.png",
    "small":"./assets/images/small.png"
   },
   "drivers": [
     {
       "id": "lametric",
       "name": {
         "en": "LaMetric Time"
       },
       "class": "other",
       "capabilities": ["volume_set"],
       "images": {
         "large": "drivers/thermostat/assets/images/large.png",
         "small": "drivers/thermostat/assets/images/small.png"
       },
       "pair": [
         {
           "id": "start"
         },{
           "id": "list_devices",
           "template": "list_devices",
           "navigation": {
             "next": "add_devices"
           }
         },{
           "id": "add_devices",
           "template": "add_devices"
         }
       ]
     }],
   	"flow": {
		"actions": [
      { "id": "lametric_notification",
        "title": {
          "en": "LaMetric Notification",
          "nl": "LaMetric notificatie"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter":"driver_id=lametric"
          },{
            "name": "text",
            "type": "text",
            "placeholder": {
              "en": "Text",
              "nl": "Bericht"
            }
          },{
            "name": "icon",
            "type": "autocomplete",
            "placeholder": {
              "en": "Homey"
            }
          },{
            "name": "sound",
            "type": "autocomplete",
            "placeholder": {
              "en": "Sound",
              "nl": "Geluid"
            }
          }
        ]
      }
    ]
	}
}
